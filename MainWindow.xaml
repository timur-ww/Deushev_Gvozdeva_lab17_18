<Window x:Class="WPFZooManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFZooManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="650" WindowStartupLocation="CenterScreen"
        Background="LightGray">
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Label Content="Zoo List"
               Grid.Row="0" Grid.Column="0"
               FontWeight="Bold"
               Margin="0 0 0 5"/>
        
        <ListBox x:Name="listZoos"
                 Grid.Row="1" Grid.Column="0"
                 Margin="0 0 5 10"
                 SelectionChanged="listZoos_SelectionChanged"/>
        
        <Label Content="Associated Animals"
               Grid.Row="0" Grid.Column="1"
               FontWeight="Bold"
               Margin="5 0 5 5"/>
        
        <ListBox x:Name="listAssociatedAnimals"
                 Grid.Row="1" Grid.Column="1"
                 Margin="5 0 5 10"/>

        <Label Content="All Animals"
               Grid.Row="0" Grid.Column="2"
               FontWeight="Bold"
               Margin="5 0 0 5"/>
        
        <ListBox x:Name="listAllAnimals"
                 Grid.Row="1" Grid.Column="2"
                 Margin="5 0 0 10"/>

        <TextBox x:Name="myTextBox"
                 Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3"
                 Text="TextBox"
                 TextWrapping="Wrap"
                 Height="35"
                 Margin="0 0 0 10"
                 Padding="5"/>

        <Button Content="Add Zoo"
                Click="AddZoo_Click"
                Grid.Row="3" Grid.Column="0"
                Height="32" Margin="0 0 5 5"
                Background="Green" Foreground="White"
                FontWeight="SemiBold"/>

        <Button Content="Add Animal to Zoo"
                Click="AddAnimalToZoo_Click"
                Grid.Row="3" Grid.Column="1"
                Height="32" Margin="5 0 5 5"
                Background="Blue" Foreground="White"
                FontWeight="SemiBold"/>

        <Button Content="Add Animal Zoo"
                Click="AddAnimal_Click"
                Grid.Row="3" Grid.Column="2"
                Height="32" Margin="5 0 0 5"
                Background="Green" Foreground="White"
                FontWeight="SemiBold"/>

        <Button Content="Update Zoo"
                Click="UpdateZoo_Click"
                Grid.Row="4" Grid.Column="0"
                Height="32" Margin="0 0 5 5"
                Background="Orange" Foreground="White"
                FontWeight="SemiBold"/>

        <Button Content="Update Animal"
                Click="UpdateAnimal_Click"
                Grid.Row="4" Grid.Column="1"
                Height="32" Margin="5 0 5 5"
                Background="Orange" Foreground="White"
                FontWeight="SemiBold"/>

        <Button Content="Remove Animal"
                Click="RemoveAnimal_Click"
                Grid.Row="4" Grid.Column="2"
                Height="32" Margin="5 0 0 5"
                Background="Orange" Foreground="White"
                FontWeight="SemiBold"/>

        <Button Content="Delete Zoo"
                Click="DeleteZoo_Click"
                Grid.Row="5" Grid.Column="0"
                Height="32" Margin="0 0 5 0"
                Background="Red" Foreground="White"
                FontWeight="SemiBold"/>

        <Button Content="Delete Animal"
                Click="DeleteAnimal_Click"
                Grid.Row="5" Grid.Column="2"
                Height="32" Margin="5 0 0 0"
                Background="red" Foreground="White"
                FontWeight="SemiBold"/>
    </Grid>
</Window>
